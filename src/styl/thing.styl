@import 'qz/chart-elements'

$RED = #ecc
$BLUE = #cce

.item-body
	h2
		margin-bottom 0 !important

	p
		padding-top 10px !important

.president
	opacity 0.5

	&.clinton
		fill $BLUE

	&.bush
		fill #ecc

	&.obama
		fill $BLUE

	&.trump
		fill $RED

.label-bubble
	fill $qz-background-gray

.label
	font-family $qz-sans-light
	fill $qz-chart-axis-text
	shape-rendering crispEdges
	// alignment-baseline middle

.lines path
	stroke: $qz-purp-4
	stroke-width: 3px
	fill: none

.source
	font-family $qz-sans
	color $qz-gray-2
	font-size 14px
	padding-right: 20px
	text-align: right
	padding-bottom: 20px

@media screen and (max-width 600px)
	.item-body
		h2
			margin-bottom 0 !important

		p
			padding-top 10px !important
